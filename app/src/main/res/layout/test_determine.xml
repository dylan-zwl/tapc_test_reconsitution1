<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/prompt_box_w"
        android:layout_height="@dimen/prompt_box_h"
        android:layout_centerInParent="true"
        android:background="#b0000000"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/determine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fb0e1e"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/success_btn"
                android:layout_width="@dimen/btn_w"
                android:layout_height="@dimen/btn_h"
                android:text="成功" />

            <Button
                android:id="@+id/fault_btn"
                android:layout_width="@dimen/btn_w"
                android:layout_height="@dimen/btn_h"
                android:layout_marginLeft="60dp"
                android:text="失败" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>